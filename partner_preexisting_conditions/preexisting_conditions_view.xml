	        		</sheet>
	        	</form>
        	</field>
        </record> 

        <record model="ir.ui.view" id="view_preexisting_conditions_search">
            <field name="name">Partner Pre-existing Conditions</field>
            <field name="model">preexisting.conditions</field>
            <field name="arch" type="xml">
                <search string="Clients" version="8.0">
                    <field name="partner_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_preexisting_conditions_form">
            <field name="name">Partner Pre-existing Conditions</field>
            <field name="res_model">preexisting.conditions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_partner_id': active_id}</field>
        </record>

        <record model="ir.ui.view" id="view_preexisting_conditions_form1">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="custom_naca.custom_view_fields_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='screening']" position="inside">
                        <button name="%(action_preexisting_conditions_form)d" widget="monetary" context="{'search_default_partner_id': active_id, 'default_duration': 1.0}" string="Partner Pre-existing Conditions" type="action"/>
                    </xpath>
                </data>
            </field>
        </record>     
