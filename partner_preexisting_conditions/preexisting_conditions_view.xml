        <record id="view_preexisting_conditions_tree" model="ir.ui.view">
        <field name="name">preexisting.conditions.tree</field>
        <field name="model">preexisting.conditions</field>
        <field name="arch" type="xml">
        <tree string="Partner Pre-existing Conditions">
            <field name="dateofdiagnosis"/>
            <field name="conditionongoing"/>
            <field name="initials"/>
